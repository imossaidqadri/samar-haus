{% comment %}theme-check-disable UndefinedObject{% endcomment %}

{%- style -%}
  .footer {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .footer {
      margin-top: {{ section.settings.margin_top }}px;
    }

    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* AAKAM Footer Styles */
  .aakam-footer {
    background-color: #000;
    color: #fff;
    padding: 60px 20px 40px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }
  
  .aakam-footer-container {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .aakam-footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 60px;
    margin-bottom: 40px;
  }
  
  .aakam-footer-column h3 {
    font-size: 14px;
    font-weight: bold;
    margin-bottom: 20px;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }
  
  .aakam-footer-column p,
  .aakam-footer-column div {
    font-size: 14px;
    line-height: 1.6;
    margin-bottom: 12px;
    font-weight: 300;
  }
  
  .aakam-footer-column a {
    color: #fff;
    text-decoration: none;
    font-size: 14px;
    display: block;
    margin-bottom: 8px;
    font-weight: 300;
  }
  
  .aakam-footer-column a:hover {
    text-decoration: underline;
  }
  
  .aakam-contact-info {
    margin-bottom: 8px;
  }
  
  .aakam-phone-note {
    font-size: 12px;
    color: #ccc;
  }
  
  .aakam-company-info {
    font-size: 11px;
    line-height: 1.4;
    color: #999;
    border-top: 1px solid #333;
    padding-top: 20px;
    margin-top: 20px;
  }
  
  @media (max-width: 768px) {
    .aakam-footer-grid {
      grid-template-columns: 1fr;
      gap: 40px;
    }
    
    .aakam-footer {
      padding: 40px 20px 30px;
    }
  }
{%- endstyle -%}

<footer class="footer aakam-footer section-{{ section.id }}-padding">
  <div class="aakam-footer-container">
    <div class="aakam-footer-grid">
      
      <!-- Left Column - Store Info -->
      <div class="aakam-footer-column">
        {%- if section.settings.store_title != blank -%}
          <h3>{{ section.settings.store_title }}</h3>
        {%- endif -%}
        
        {%- if section.settings.store_address != blank -%}
          <div class="aakam-contact-info">{{ section.settings.store_address }}</div>
        {%- endif -%}
        
        {%- if section.settings.store_hours_label != blank or section.settings.store_hours != blank -%}
          <div class="aakam-contact-info" style="margin-top: 20px;">{{ section.settings.store_hours_label }}</div>
          <div class="aakam-contact-info">{{ section.settings.store_hours }}</div>
        {%- endif -%}
        
        {%- if section.settings.chat_hours_label != blank or section.settings.chat_hours != blank -%}
          <div class="aakam-contact-info" style="margin-top: 20px;">{{ section.settings.chat_hours_label }}</div>
          <div class="aakam-contact-info">{{ section.settings.chat_hours }}</div>
        {%- endif -%}
        
        {%- if section.settings.phone != blank -%}
          <div class="aakam-contact-info" style="margin-top: 20px;">
            {{ section.settings.phone }}
            {%- if section.settings.phone_note != blank -%}
              <span class="aakam-phone-note">{{ section.settings.phone_note }}</span>
            {%- endif -%}
          </div>
        {%- endif -%}
        
        {%- if section.settings.email != blank -%}
          <div class="aakam-contact-info">{{ section.settings.email }}</div>
        {%- endif -%}
      </div>
      
      <!-- Right Column - Links -->
      <div class="aakam-footer-column">
        <h3 style="opacity: 0; visibility: hidden;">&nbsp;</h3>
        {%- if section.settings.link_1_text != blank and section.settings.link_1_url != blank -%}
          <a href="{{ section.settings.link_1_url }}">{{ section.settings.link_1_text }}</a>
        {%- endif -%}
        
        {%- if section.settings.link_2_text != blank and section.settings.link_2_url != blank -%}
          <a href="{{ section.settings.link_2_url }}">{{ section.settings.link_2_text }}</a>
        {%- endif -%}
        
        {%- if section.settings.link_3_text != blank and section.settings.link_3_url != blank -%}
          <a href="{{ section.settings.link_3_url }}">{{ section.settings.link_3_text }}</a>
        {%- endif -%}
      </div>
      
    </div>
    
    <!-- Company Info -->
      <div class="aakam-company-info">
    © 2025 SamarHaus with ❤  <a href="https://www.otherdev.com"> The Other Dev</a>
        {{ section.settings.company_info }}
      </div>
    
    <!-- Footer Logo -->
    {%- if section.settings.footer_logo != blank -%}
      <div style="text-align: center; margin-top: 40px;">
        <img 
          src="{{ section.settings.footer_logo | image_url: width: section.settings.logo_width }}" 
          alt="{{ shop.name }}"
          style="max-width: {{ section.settings.logo_width }}px; height: auto;"
          loading="lazy"
        >
      </div>
    {%- endif -%}
  </div>
</footer>

